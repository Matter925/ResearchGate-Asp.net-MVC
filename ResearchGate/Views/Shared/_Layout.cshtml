<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ResearchGate</title>
    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/modernizr")

    
</head>
<body style="background-color: rgb(215, 222, 222)">
    
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: rgb(69, 80, 80);">
        <div class="container">
            <div class="navbar-header">


                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("ResearchGate", "Index", "Papers", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    <li style="font-weight: bold">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="font-weight: bold">@Html.ActionLink("About", "About", "Home")</li>
                    <li style="font-weight: bold">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content " style="width:100% " >
        @RenderBody()
        <hr />
    </div>
    <div style="width: 100%;height: 50px;background-color: rgb(129, 167, 167);margin-top: 159px;">
        <p style="text-align: center;padding-top: 15px;font-weight: bold">&copy; @DateTime.Now.Year - ResearchGate</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
